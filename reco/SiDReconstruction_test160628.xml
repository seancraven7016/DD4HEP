  <global>
   <!--   /afs/phas.gla.ac.uk/user/b/bogdanm/public_ppe/work/lcgeo/testSiD_o1_v01.slcio </parameter> -->
    <parameter name="LCIOInputFiles">
      /usersc/sc17127/lcgeo/testSiD_o1_v01.slcio </parameter>
